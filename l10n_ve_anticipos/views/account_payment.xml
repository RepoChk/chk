<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_payment_anticipos" model="ir.ui.view">
            <field name="name">Anticipos: account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                     <field name="anticipo" readonly="state in ('posted', 'cancel')"/>
                </xpath>

            </field>
        </record>

        <!--   Heredar la vista account.view_account_payment_tree     -->
        <record id="account_payment_tree_anticipos" model="ir.ui.view">
            <field name="name">Anticipos: account.payment.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="anticipo" readonly="1"/>
                </xpath>
            </field>
        </record>

        <!--heredar account.view_account_payment_search-->
        <record id="account_payment_search_anticipos" model="ir.ui.view">
            <field name="name">Anticipos: account.payment.search</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inbound_filter']" position="replace">
                    <field name="payment_type" string="Tipo de pago"/>
                    <filter string="Pagos de Clientes" name="inbound_filter" domain="[('payment_type', '=', 'inbound'), ('is_internal_transfer', '=', False)]"/>
                </xpath>
                <xpath expr="//filter[@name='outbound_filter']" position="replace">
                    <filter string="Pagos de Proveedores" name="outbound_filter" domain="[('payment_type', '=', 'outbound'), ('is_internal_transfer', '=', False)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>