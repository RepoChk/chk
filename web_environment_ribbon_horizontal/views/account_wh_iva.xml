<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="gc_view_wh_iva_form_customer" model="ir.ui.view">
            <field name="name">gc.account.wh.iva.form.customer</field>
            <field name="model">account.wh.iva</field>
            <field name="inherit_id" ref="l10n_ve_full.view_wh_iva_form_customer"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="readonly">state in ('done', 'cancel')</attribute>
                    <attribute name="options">{"no_open" : True, 'no_create': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">state in ('done', 'cancel')</attribute>
                    <attribute name="options">{"no_open" : True, 'no_create': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='number']" position="attributes">
                    <attribute name="readonly">state in ('done', 'cancel')</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>