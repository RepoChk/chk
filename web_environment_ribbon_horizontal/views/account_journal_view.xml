<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="ribbon_horizontal_journal_form_inherit" model="ir.ui.view">
            <field name="name">ribbon.horizontal.journal.form.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="gchakao_custom.gc_account_journal_form_inherit_views"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_seq_id']" position="attributes">
                    <attribute name="options">{'no_open': True, 'no_edit': True, 'no_create': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_ctrl_seq_id']" position="attributes">
                    <attribute name="options">{'no_open': True, 'no_edit': True, 'no_create': True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="ribbon_horizontal_l10n_ve_full_inherit" model="ir.ui.view">
            <field name="name">ribbon.horizontal.l10n.ve.full.tree.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="l10n_ve_full.extra_account_journal_venezuela"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sequence_control']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
