<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="gc_account_move_form_inherit_views" model="ir.ui.view">
            <field name="name">gc.account.move.form.inherit.views</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//div[hasclass('oe_title')]" position="inside">
                    <h1>
                        <field name="invoice_number" readonly="1"/>
                    </h1>
                </xpath> -->
                
                <xpath expr="//label[@for='journal_id']" position="before">
                    <field name="invoice_date_due" string="Fecha de Vencimiento" readonly="1"/>
                </xpath>
                <!-- <xpath expr="//field[@name='tax_today']" position="after">
                    <field name="tax_no_fiscal"/>
                </xpath> -->
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                    <field name="discount_bs" widget='monetary' options="{'currency_field': 'company_currency_id'}" optional="hide"/>
                    <field name="discount_usd" widget='monetary' options="{'currency_field': 'currency_id_dif'}" optional="hide"/>
                    <field name="purchase_price" readonly="1" optional="hide"/>
                    <field name="profitability" readonly="1" optional="hide"/>
                    <field name="profitability_percent" readonly="1" optional="hide"/>
                    <field name="early_payment_discount" optional="hide"/>
                    <field name="price_unit_discount" readonly="1" optional="hide"/>
                    <field name="profitability_discount" readonly="1" optional="hide"/>
                    <field name="profitability_percent_discount" readonly="1" optional="hide"/>
                </xpath>
                <!-- <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                    <field name="amount_payment_igtf_bs" widget='monetary'/>
                    <field name="amount_payment_igtf_usd" widget='monetary'/>
                </xpath> -->
                <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field name="filler_total" readonly="1"/>
                    <field name="reason_cancellation" invisible="state != 'cancel'"/>
                    <field name="void_invoice" invisible="1"/>
                    <field name="motive" invisible="move_type != 'out_refund'" required="move_type == 'out_refund'"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']" position="after">
                    <field name="filler" readonly="1"/>
                    <field name="fillert" readonly="1"/>
                </xpath>

                <xpath expr="//group[@name='accounting_info_group']/field[@name='company_id']" position="before">
                    <field name="branch_id" readonly="1" options="{'no_open': True}"/>
                </xpath>

                <xpath expr="//group[@name='sale_info_group']" position="inside">
                    <field name="early_payment_id" readonly="1"/>
                    <field name="commission_type" readonly="state != 'draft'" invisible="move_type not in ('out_invoice', 'out_receipt', 'out_refund')"/>
                    <field name="effective_base"/>
                    <field name="effective_date"/>
                    <field name="effective_day"/>
                </xpath>

                <xpath expr="//group[@id='other_tab_group']" position="after">
                    <group>
                        <group name="output_info" string="Información del Origen">
                            <field name="origin_port"/>
                            <field name="origin_country_id"/>
                        </group>
                        <group name="arrival_info" string="Información del Destino">
                            <field name="destination_port"/>
                            <field name="destination_country_id"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//field[@name='nro_planilla_impor']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='nro_expediente_impor']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='fecha_importacion']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>

                <xpath expr="//div[@name='journal_div']/field[@name='journal_id']" position="attributes">
                    <attribute name="options">{'no_open': False}</attribute>
                </xpath>
                
                <xpath expr="//button[@name='action_invoice_sent']" position="before">
                    <button string="Nota Pronto Pago" name="get_early_payment" type="object" class="oe_highlight" invisible="state in ('draft', 'cancel') or move_type != 'out_invoice'"/>
                </xpath>

                <xpath expr="//button[@name='button_request_cancel']" position="before">
                    <button string="Anular Factura" name="action_void_invoice_wizard" type="object" class="oe_highlight" invisible="state in ('cancel', 'draft')"/>
                </xpath>
                <!-- CAMPOS RESTRINGIDOS -->
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='reversed_entry_id_new']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//div[@name='journal_div']/field[@name='currency_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//group[@id='header_right_group']/field[@name='currency_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='currency_id_dif']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_user_id']" position="attributes">
                    <attribute name="options">{'no_create': True,'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_bank_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//page[@id='other_tab']/group[@id='other_tab_group']/group[@name='accounting_info_group']/field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='account_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_incoterm_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit': True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="gc_account_move_tree_inherit_views" model="ir.ui.view">
            <field name="name">gc.account.move.tree.inherit.views</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" decoration-bf="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="invoice_date_due" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="journal_id" optional="show"/>
                    <field name="filler_total" readonly="1"/>
                </xpath>
                <field name="filler_total" position="attributes">
                    <attribute name="sum">Total</attribute>
                </field>
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="effective_base" optional="hide" />
                    <field name="effective_day" optional="hide" />
                    <field name="effective_date" optional="hide" />
                </xpath>
            </field>
        </record>

        <record id="gc_account_move_credit_note_tree_inherit_views" model="ir.ui.view">
            <field name="name">gc.account.move.credit.note.tree.inherit.views</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_credit_note_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" decoration-bf="1"/>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="journal_id" optional="show"/>
                    <field name="filler_total" readonly="1"/>
                </xpath>
                <field name="filler_total" position="attributes">
                    <attribute name="sum">Total</attribute>
                </field>
            </field>
        </record>
        
        <record id="gc_account_extra_account_move_venezuela_views" model="ir.ui.view">
            <field name="name">Extra account.move Venezuela inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_ve_full.extra_account_move_venezuela"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='nro_ctrl']" position="replace">
                    <field name="nro_ctrl" string="Número de Control" force_save="1" required="move_type in ('in_invoice', 'in_refund', 'in_receipt')" readonly="move_type in ('out_invoice','out_refund', 'out_receipt')" invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt','in_invoice', 'in_refund', 'in_receipt') " context="{'res_partner_search_mode': 'supplier'}"/>
                </xpath>
                <xpath expr="//field[@name='nro_ctrl']" position="before">
                    <field name="invoice_number" readonly="move_type in ('out_invoice','out_refund', 'out_receipt')" invisible="move_type in ('in_invoice','in_refund', 'in_receipt')"/>
                </xpath>
                <xpath expr="//label[@for='ref']" position="before">
                        <field name="sub_partner_ids" invisible="1"/>
                        <field name="sub_provider_id" string="Sub-Proveedor" options="{'no_create': True, 'no_open': True, 'no_edit': True}" invisible="move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund') or company_type1 == 'company'"/>
                </xpath>
            </field>
        </record>

        <record id="gc_inherit_view_invoice_tree" model="ir.ui.view">
            <field name="name">gc.inherit.view.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="invoice_number" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_partner_display_name']" position="after">
                    <field name="sub_provider_id" readonly="1" column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')" groups="base.group_user"/>
                </xpath>
                <xpath expr="//field[@name='invoice_partner_display_name']" position="before">
                    <field name="supplier_invoice_number" column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"/>
                </xpath>
                <xpath expr="//field[@name='supplier_invoice_number']" position="attributes">
                    <attribute name="string">Número de Factura Proveedores</attribute>
                </xpath>
            </field>
        </record>

        <record id="gc_inherit_view_account_search" model="ir.ui.view">
            <field name="name">gc.inherit.view.account.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="invoice_number" string="Número de Factura"/>
                    <field name="supplier_invoice_number" string="Número de Factura Proveedores"/>
                </xpath>
            </field>
        </record>

        <record id="gc_inherit_view_move_tree" model="ir.ui.view">
            <field name="name">gc.inherit.view.move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="sub_provider_id" readonly="1" groups="base.group_user" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="supplier_invoice_number" column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"/>
                </xpath>
                <xpath expr="//field[@name='supplier_invoice_number']" position="attributes">
                    <attribute name="string">Número de Factura Proveedores</attribute>
                </xpath>
            </field>
        </record>
            
        <record id="filter_cuentas_por_cobrar" model="ir.filters">
            <field name="name">Cuentas por Cobrar</field>
            <field name="model_id">sale.order</field>
            <field name="domain">[('state', '=', 'posted'), ('amount_residual_usd', '>', 0)]</field>
            <field name="context">{}</field>
            <field name="user_id" eval="False"/>
            <field name="is_default" eval="False"/> 
        </record>

    </data>
</odoo>
