<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- transaction.classification tree view -->
    <record id="transaction_classification_view_tree" model="ir.ui.view">
        <field name="name">transaction.classification.view.tree</field>
        <field name="model">transaction.classification</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="type_transaction"/>
            </tree>
        </field>
    </record>

    <!-- transaction.classification form view -->
    <record id="transaction_classification_view_form" model="ir.ui.view">
        <field name="name">transaction.classification.view.form</field>
        <field name="model">transaction.classification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type_transaction"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

