<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gchakao_custom.res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">gchakao_custom.res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@name='hr_payroll']" position="inside">
                    <block title="Notificaciones para Orden de pago" id="hr_payment_order">
                        <setting string="Ordenes de pago" help="Debe seleccionar el encargado de generar los pagos desde las ordenes">
                            <field name="hr_payment_order_notification_user_id"/>
                        </setting>
                        <setting string="Pagos" help="Debe seleccionar el usuario que recibira las alertas de pago desde las ordenes de pago">
                            <field name="account_payment_notification_user_id"/>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
