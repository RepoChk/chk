<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="hr_discount_type_tree_view" model="ir.ui.view">
        <field name="name">hr.discount.type.view</field>
        <field name="model">hr.discount.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- hr.discount.type search view -->
    <record id="hr_discount_type_search" model="ir.ui.view">
        <field name="name">hr.discount.type.view.search</field>
        <field name="model">hr.discount.type</field>
        <field name="arch" type="xml">
            <search string="Busqueda de Solicitudes">
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <record id="hr_discount_type_action" model="ir.actions.act_window">
        <field name="name">Tipos de Descuentos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.discount.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo tipo de descuento
            </p>
        </field>
    </record>

    <menuitem   
        name="Tipos de Descuentos" 
        id="hr_discount_type_menu"
        sequence="100"
        parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
        action="hr_discount_type_action"/>

</odoo>
