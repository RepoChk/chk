<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gc_stock_lot_form_inherit" model="ir.ui.view">
            <field name="name">gc.stock.lot.form.inherit</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[@name='main_group']/group/field[@name='ref']" position="before">
                    <field name="tracking_number" readonly="product_qty == 0"/>
                </xpath>
            </field>
        </record>

        <record id="gc_stock_lot_tree_inherit" model="ir.ui.view">
            <field name="name">gc.stock.lot.tree.inherit</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='name']" position="after">
                    <field name="tracking_number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>  