<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View purchase.requisition form -->
    <record id="view_purchase_requisition_form_inherit" model="ir.ui.view">
        <field name="name">view.purchase.requisition.form.inherit</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='vendor_id']" position="before">
                <field name="sub_partner_ids" invisible="1"/>
                <field name="master_vendor_id" options="{'no_create': True, 'no_open': True}" readonly="state != 'draft'"/>
            </xpath>
            <xpath expr="//field[@name='vendor_id']" position="attributes">
                <attribute name="domain">['|', ('company_id', '=', False), ('company_id', '=', company_id), ('id', 'in', sub_partner_ids)]</attribute>
            </xpath>

            <xpath expr="//field[@name='vendor_id']" position="attributes">
                <attribute name="string">Proveedor</attribute>
            </xpath>

        </field>
    </record>

    <record id="view_purchase_requisition_tree_inherited" model="ir.ui.view">
        <field name="name">view.purchase.requisition.tree.inherited</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_tree" />
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vendor_id']" position="before">
                <field name="master_vendor_id"/>
            </xpath>
        </field>
    </record>
</odoo>