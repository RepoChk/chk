<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payment_order_tree" model="ir.ui.view">
        <field name="name">hr.payment.order.tree</field>
        <field name="model">hr.payment.order</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree string="Ordenes de Pago">
                <field name="name"/>
                <field name="type_payment_order"/>
                <field name="amount_usd" sum="Total USD"/>
                <field name="amount_bs" sum="Total Bs"/>
                <field name="currency_id_dif" column_invisible="True"/>
                <field name="currency_id_company" column_invisible="True"/>
                <field name="company_id"/>
                <field name="date"/>
                <field name="state" string="Estatus" widget="badge" 
                    decoration-muted="state == 'draft'" 
                    decoration-success="state == 'confirm'" 
                    decoration-primary="state == 'approved'" 
                    decoration-danger="state == 'rejected'" 
                    decoration-info="state == 'done'"/>
            </tree>
        </field>
    </record>

    <record id="hr_payment_order_search" model="ir.ui.view">
        <field name="name">Buscar Ordenes de Pago</field>
        <field name="model">hr.payment.order</field>
        <field name="arch" type="xml">
            <search string="Buscar">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="payslip_id"/>
                <field name="date"/>
                <group expand="1" string="Agrupar por">
                    <filter string="Empleado" name="group_by_employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Fecha" name="group_by_date" context="{'group_by':'date'}"/>
                    <filter string="Tipo" name="group_by_type_payment_order" context="{'group_by':'type_payment_order'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hr_payment_order_form" model="ir.ui.view">
        <field name="name">hr.payment.order.form</field>
        <field name="model">hr.payment.order</field>
        <field name="arch" type="xml">
            <form string="Orden de Pago">
                <header>
                    <button name="action_send_approval" type="object" string="Solicitud de aprobación" invisible="state != 'confirm' or not is_approval" class="btn-primary"/>
                    <button name="action_confirm" type="object" string="Confirmar" invisible="state != 'draft'" confirm="Esta acción es irreversible, si confirma no podra editar el registro. ¿Desea continuar?"/>
                    <button name="action_draft" type="object" string="Pasar a Borador" invisible="state not in ('confirm','approved','rejected')" confirm="Esta acción eliminara todas las aprobaciones para que sean solicitadas nuevamente. ¿Desea continuar?"/>
                    <button name="action_create_payment" type="object" string="Crear Pago en Borrador" invisible="state != 'approved' or payment_id" class="btn-primary"/>
                    <button name="action_done" type="object" string="Marcar como Hecho" invisible="not payment_id or state == 'done'" confirm="Si esta seguro que el pago fue realizado puede continuar" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approved,rejected,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_payment_order" readonly="state != 'draft'"/>
                            <field name="employee_id" readonly="state != 'draft'" invisible="type_payment_order in ['discount','run']" required="type_payment_order in ['payslip','loan']"/>
                            <field name="payslip_run_id" readonly="state != 'draft'" invisible="type_payment_order == 'loan'" required="type_payment_order in ['run','payslip']"/>
                            <field name="hr_discount_type_id" readonly="state != 'draft'" invisible="type_payment_order != 'discount'"/>
                            <field name="payslip_ids" invisible="1"/>
                            <field name="payslip_id" domain="[('id', 'in', payslip_ids)]" readonly="state != 'draft'" invisible="type_payment_order in ['run','discount','loan']" required="type_payment_order == 'payslip'"/>
                            <field name="company_id" options="{'no_open': True}" force_save="1"/>
                            <field name="observation"/>
                            <field name="date"/>
                            <field name="currency_id_dif" invisible="1"/>
                            <field name="currency_id_company" invisible="1"/>
                            <field name="c_approvals_approver_ids" invisible="1"/>
                        </group>
                        <group>
                            <field name="payment_id" invisible="not payment_id"/>
                            <field name="journal_id" readonly="state != 'approved'"/>
                            <field name="rate" readonly="state != 'draft'"/>
                            <field name="amount_usd" readonly="state != 'draft'"/>
                            <field name="amount_bs" readonly="state != 'draft'"/>
                            <field name="is_approval" readonly="state in ('approved','rejected','done')" />
                            <field name="c_approver_ids" widget="many2many_tags" invisible="not is_approval" />
                        </group>
                    </group>
                    <notebook>
                        <page name="send_approval" string="Solicitud Aprobaciones" invisible="is_approval == False">
                            <field name="c_approvals_ids">
                                <tree create="false" delete="false">
                                    <field name="payment_order_id" column_invisible="True"/>
                                    <field name="request_owner_id" widget="many2one_avatar_user" on_change="1" string="Solicitante"/>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="date_confirmed" decoration-bf="1" string="Última actualización"/>
                                    <field name="request_status" 
                                        decoration-info="request_status == 'new'" 
                                        decoration-warning="request_status == 'pending'" 
                                        decoration-success="request_status == 'approved'" 
                                        decoration-danger="request_status == 'refused'" 
                                        widget="badge" 
                                    />
                                    <field name="reason" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page name="approval" string="Aprobaciones" invisible="not c_approvals_approver_ids">
                            <field name="c_approvals_approver_ids">
                                <tree create="false" delete="false">
                                    <field name="request_id"/>
                                    <field name="user_id"/>
                                    <field name="required"/>
                                    <field name="write_date"/>
                                    <field name="status" 
                                        decoration-info="status == 'new'" 
                                        decoration-warning="status == 'pending'" 
                                        decoration-success="status == 'approved'" 
                                        decoration-danger="status == 'refused'" 
                                        widget="badge" 
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_payment_order_action" model="ir.actions.act_window">
        <field name="name">Ordenes de Pago</field>
        <field name="res_model">hr.payment.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_payment_order_tree"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hr_payment_order_search"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Crea una nueva orden de pago
          </p>
        </field>
    </record>


    <menuitem 
        action="hr_payment_order_action" 
        id="menu_payment_order_discount" 
        parent="hr_payroll.menu_hr_payroll_payslips" 
        sequence="120"/>
</odoo>


