<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gc_stock_quant_tree_editable_inherit" model="ir.ui.view">
            <field name="name">gc.stock.quant.tree.editable.inherit</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='lot_id']" position="after">
                    <field name="tracking_number" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="gc_stock_quant_tree_inherit" model="ir.ui.view">
            <field name="name">gc.stock.quant.tree.inherit</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_simple"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='lot_id']" position="after">
                    <field name="tracking_number" column_invisible="context.get('hide_lot', False)"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>  