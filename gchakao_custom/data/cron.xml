<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="generate_sequences_categories" model="ir.cron">
            <field name="name">Generar Secuencias para categorias</field>
            <field name="interval_number">10</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">5</field>
            <field name="state">code</field>
            <field name="model_id" ref="gchakao_custom.model_product_category"/>
            <field name="code">model.create_all_seqs()</field>
            <field name="active" eval="False"/>
        </record>

        <record id="generate_sequences_product_template" model="ir.cron">
            <field name="name">Secuencias para productos (asignación de secuencias según categoría)</field>
            <field name="interval_number">10</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">5</field>
            <field name="state">code</field>
            <field name="model_id" ref="gchakao_custom.model_product_template"/>
            <field name="code">model.assign_sequence_to_storable_products()</field>
            <field name="active" eval="False"/>
        </record>
        
        <record id="seq_intercompany_transfer" model="ir.sequence">
            <field name="name">Tranferencia entre Compañia</field>
            <field name="code">intercompany.transfer</field>
            <field name="prefix">TI/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
