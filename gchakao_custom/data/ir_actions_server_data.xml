<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.server" id="action_gc_decline">
        <field name="name">Rechazar</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="binding_model_id" ref="hr_holidays.model_hr_leave" />
        <field name="groups_id" eval="[(4, ref('hr_payroll.group_hr_payroll_user'))]"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                records.action_refuse()
        </field>
    </record>

    <record model="ir.actions.server" id="action_gc_draft">
        <field name="name">Pasar a borrador</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="binding_model_id" ref="hr_holidays.model_hr_leave" />
        <field name="groups_id" eval="[(4, ref('hr_payroll.group_hr_payroll_user'))]"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                records.action_draft()
        </field>
    </record>
</odoo>
