<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="gc_void_invoice_wizard" model="ir.ui.view">
            <field name="name">gc.void.invoice.wizard</field>
            <field name="model">void.invoice</field>
            <field name="arch" type="xml">
                <form string="Refund">
                    <group>
                        <field name="reason_cancellation" required="1"/>
                    </group>
                
                    <footer>
                        <button string="Anular Factura" type="object" name="action_void_invoice" class="btn-primary"/>
                        <button string="Cerrar" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
