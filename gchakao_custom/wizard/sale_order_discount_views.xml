<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="gc_sale_order_line_wizard_form_inherit" model="ir.ui.view">
            <field name="name">gc.sale.order.line.wizard.form.inherit</field>
            <field name="model">sale.order.discount</field>
            <field name="inherit_id" ref="sale.sale_order_line_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[2]" position="after">
                    <div class="col-sm-5 col-md-4 col-lg-4 col-4">
                        <group>
                            <label for="early_payment_discount"
                                   invisible="discount_type not in ('so_discount', 'sol_discount')"/>
                            <field name="early_payment_discount"
                                   invisible="discount_type not in ('so_discount', 'sol_discount')"
                                   widget="percentage" nolabel="1"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>