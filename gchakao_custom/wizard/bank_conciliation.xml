<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_bank_conciliation_wizard_form" model="ir.ui.view">
        <field name="name">bank.conciliation.wizard.form</field>
        <field name="model">bank.conciliation.wizard</field>
        <field name="arch" type="xml">
            <form string="Diario de Banco">
                <group>
                    <group>
                        <field name="company_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                        <field name="currency_option" string="Moneda" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                        <field name="journal_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button string="Imprimir PDF" type="object" name="print_pdf" class="btn-primary"/>
                    <button string="Imprimir Excel" type="object" name="generate_excel_report" class="btn-secondary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bank_conciliation_wizard" model="ir.actions.act_window">
        <field name="name">Diario de Banco</field>
        <field name="res_model">bank.conciliation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_bank_conciliation_wizard"
              name="Diario de Banco"
              parent="account.account_reports_legal_statements_menu"
              action="action_bank_conciliation_wizard"
              sequence="50"/>
</odoo>