<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="gc_view_account_move_reversal_inherit" model="ir.ui.view">
            <field name="name">gc.account.move.reversal.form.inherit</field>
            <field name="model">account.move.reversal</field>
            <field name="inherit_id" ref="account.view_account_move_reversal"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="replace">
                    <field name="journal_id"/>
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="invoice_number" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='nro_ctrl']" position="after">
                    <field name="motive"/>
                </xpath>
                <xpath expr="//field[@name='nro_ctrl']" position="attributes">
                    <attribute name="required">move_type in ('out_invoice') and not sequence_nro_ctrl_id</attribute>
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='reason']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
