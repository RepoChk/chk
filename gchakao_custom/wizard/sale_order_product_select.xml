<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="sale_order_product_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.product.select.form</field>
            <field name="model">sale.order.product.select</field>
            <field name="arch" type="xml">
                <form string="Seleccionar producto">
                    <sheet>
                        <group>
                            <label for="product_id" string="Producto"/>
                            <h3>
                                <field name="product_id" default_focus="1" placeholder="Seleccione un producto" context="{'gc_hide_field': True}" options="{'no_open': True, 'no_edit': True, 'no_create': True}"/>
                            </h3>
                            <label for="company_id" string="Compañía"/>
                            <h3>
                                <field name="order_id" invisible="1"/>
                                <field name="company_id" options="{'no_open': True,'no_create': True}" readonly="1"/>
                            </h3>
                        </group>
                        <notebook>
                            <page name="wproduct" string="Disponibilidad por Almacen">
                                <field name="line_ids" nolabel="1">
                                    <tree order="qty_available desc" editable="bottom" create="false">
                                        <field name="product_id" width="200px" options="{'no_open': True, 'no_edit': True, 'no_create': True}"/>
                                        <field name="warehouse_id" width="200px" options="{'no_open': True, 'no_edit': True, 'no_create': True}"/>
                                        <field name="qty_available" width="200px" sum="Total disponible" force_save="1"/>
                                        <field name="qty_done" width="200px" sum="Total venta"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Agregar" type="object" class="oe_highlight" name="create_sale_order_lines"/>
                        <button name="cancel" special="cancel" data-hotkey="z" string="Cerrar" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sale_order_product_wizard_action" model="ir.actions.act_window">
            <field name="name">Seleccionar producto</field>
            <field name="res_model">sale.order.product.select</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>