<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="wizard_product_price_list" model="ir.ui.view">
			<field name="name">Asistant for Product Prices List</field>
			<field name="model">product.price.list</field>
			<field name="arch" type="xml">
				<form string="Lista de Precios">
                    <group>
                        <field name="product_pricelist_ids" string="Tarifas" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="product_ids" string="Productos" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="company_ids" string="Compañia" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="location_ids" string="Ubicaciones" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                        <field name="is_qty_available" widget="boolean_toggle"/>
                        <field name="is_qty_total" widget="boolean_toggle"/>
                    </group>
                    <notebook>
                        <page name="category" string="Categorías">
                        	<field name="category_ids" mode="tree" options="{'no_create': True}">
								<tree string="Requisiciones" editable="bottom" create="0">
									<field name="name" options="{'no_create': True}"/>
								</tree>
							</field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="price_list_print" string="Imprimir" type="object"/>
                        <button special="cancel" string="Cancelar" class="oe_highlight"/>
                        <!--<button name="imprimir_xlsx" string="Imprimir XLSX" type="object" />-->
                    </footer>
                </form>
			</field>
		</record>

		<record id="action_product_price_list" model="ir.actions.act_window">
			<field name="name">Lista de Precios de Productos</field>
			<field name="res_model">product.price.list</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_product_price_list"/>
			<field name="target">new</field>
		</record>

		<menuitem 
			name="Lista de Precios de Productos"
			parent="sale.menu_sale_report" 
			id="gchakao_custom.wizard_product_price_list_menu" 
			action="action_product_price_list"
			sequence="20"/>
	</data>
</odoo>