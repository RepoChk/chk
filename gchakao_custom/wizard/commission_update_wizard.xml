<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="commission_update_wizard_form" model="ir.ui.view">
            <field name="name">Actualizar comisiones</field>
            <field name="model">commission.update.wizard</field>
            <field name="arch" type="xml">
                <form string="Actualizar comisiones">
                    <group>
                        <div colspan="2" class="text-muted">
                            Los montos se calculan en base a la última tasa con estatus "Confirmado" en la opción de "Actualizar sueldos"
                        </div>
                    </group>
                    <field name="contract_ids" nolabel="1">
                        <tree create="false" editable="bottom" delete="false" sample="1">
                            <field name="company_id" column_invisible="True"/>
                            <field name="employee_id"/>
                            <field name="commission_usd"/>
                            <field name="commission_bs"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="action_update" string="Actualizar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="commission_update_wizard_action" model="ir.actions.act_window">
            <field name="name">Actualizar comisiones</field>
            <field name="res_model">commission.update.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>