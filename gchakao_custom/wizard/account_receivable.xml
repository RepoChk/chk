<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_receivable_wizard_form" model="ir.ui.view">
        <field name="name">account.receivable.wizard.form</field>
        <field name="model">account.receivable.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Cuentas por Cobrar por Cliente ">
                <group>
                    <field name="partner_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                    <field name="invoice_user_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True, 'no_edit': True}" readonly="context.get('is_sales_force_user', False)"/>
                    <field name="company_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                </group>
                <footer>
                    <button string="Imprimir" type="object" name="print_account_receivable" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_receivable_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Cuentas por Cobrar por Cliente (PDF)</field>
        <field name="res_model">account.receivable.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_invoice_user_ids': [(4, uid)]}</field>
    </record>

    <menuitem id="menu_account_receivable_wizard"
              name="Reporte de Cuentas por Cobrar  por Cliente (PDF)"
              parent="account_reports.account_reports_partners_reports_menu"
              action="action_account_receivable_wizard"
              sequence="20"/>
</odoo>