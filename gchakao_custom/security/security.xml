<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="logistic_active_groups" model="res.groups">
            <field name="name">Permitir gestión del botón ¿Requiere despacho?</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="hr_payment_order_groups" model="res.groups">
            <field name="name">Ordenes de Pago en RRHH</field>
            <field name="comment">Acceso a Ordenes de Pago en RRHH</field>
        </record>

        <record id="categ_seq_groups" model="res.groups">
            <field name="name">Secuencias en las categorías</field>
            <field name="comment">Gestionar secuencias en categorias</field>
        </record>

        <record id="is_confirmed_payment" model="res.groups">
            <field name="name">Gestionar Confirmación de Pagos</field>
            <field name="comment">Gestionar Confirmación de Pagos</field>
        </record>

        <record id="is_concilied_groups" model="res.groups">
            <field name="name">Gestionar Conciliación de Pagos recibidos</field>
            <field name="comment">Gestionar Conciliación de Pagos recibidos</field>
        </record>

        <record id="is_payment_free_groups" model="res.groups">
            <field name="name">Gestion de Pagos Libre</field>
            <field name="comment">Gestion de Pagos Libre</field>
        </record>
        
        <record id="logistic_use_groups" model="res.groups">
            <field name="name">Permitir gestión del botón ¿Despacho en proceso?</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Regla para usuarios en el grupo: pueden ver el precio y costo del producto en dualidad de moneda  -->
        <record id="cost_and_price_use_groups" model="res.groups">
            <field name="name">Gestión de Precio y Costo de Producto</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="ir_ui_menu_rule_user" model="ir.rule">
            <field name="name">Restringir Menú a Usuarios</field>
            <field name="model_id" ref="model_ir_ui_menu"/>
            <field name="domain_force">[('restrict_user_ids','not in',user.id)]</field>
        </record>

        <record id="group_payroll_confidential" model="res.groups">
            <field name="name">Nómina Confidencial</field>
            <field name="comment">Acceso a Nómina Confidencial</field>
        </record>

        <!-- Regla para usuarios en el grupo: pueden ver todas las estructuras -->
        <record id="payroll_rule_group_all" model="ir.rule">
            <field name="name">Nómina Confidencial: Acceso a todas las estructuras</field>
            <field name="model_id" ref="hr_payroll.model_hr_payroll_structure"/>
            <field name="groups" eval="[(4, ref('gchakao_custom.group_payroll_confidential'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <!-- Regla para usuarios fuera del grupo: solo pueden ver estructuras no confidenciales -->
        <record id="payroll_rule_others" model="ir.rule">
            <field name="name">Nómina Confidencial: Acceso a estructuras no confidenciales</field>
            <field name="model_id" ref="hr_payroll.model_hr_payroll_structure"/>
            <field name="groups" eval="[(4, ref('hr_payroll.group_hr_payroll_manager')),(4, ref('hr_payroll.group_hr_payroll_employee_manager'))]"/>
            <field name="domain_force">[('confidential','=',False)]</field>
        </record>
        <!--  -->
        <record id="payroll_payslip_all" model="ir.rule">
            <field name="name">Nómina Confidencial: Acceso a todos los recibos</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="groups" eval="[(4, ref('gchakao_custom.group_payroll_confidential'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <!-- Regla para usuarios fuera del grupo: solo pueden ver recibos no confidenciales -->
        <record id="hr_payslip_rule_manager" model="ir.rule">
            <field name="name">Nómina Confidencial: Acceso a recibos no confidenciales</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="groups" eval="[(4, ref('hr_payroll.group_hr_payroll_manager'))]"/>
            <field name="domain_force">[('is_confidential','=',False)]</field>
        </record>

        <record id="hr_payslip_run_all" model="ir.rule">
            <field name="name">Nómina Confidencial: Acceso a todos los lotes</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
            <field name="groups" eval="[(4, ref('gchakao_custom.group_payroll_confidential'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <!-- Regla para usuarios fuera del grupo: solo pueden ver lotes no confidenciales -->
        <record id="hr_payslip_run_others" model="ir.rule">
            <field name="name">Nómina Confidencial: Acceso a lotes no confidenciales</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
            <field name="groups" eval="[(4, ref('hr_payroll.group_hr_payroll_manager'))]"/>
            <field name="domain_force">['|',('struct_id.confidential','=',False),('struct_id','=',False)]</field>
        </record>

        <record id="group_edit_invoice_date" model="res.groups">
            <field name="name">Permitir edición de Fecha Contable</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_two_companies" model="res.groups">
            <field name="name">Permitir gestión de dos o más compañías</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_edit_price_unit" model="res.groups">
            <field name="name">Editar Precio Unitario y Costo Unitario en Pedidos de Ventas</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
