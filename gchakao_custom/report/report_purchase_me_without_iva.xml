<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Cabecera y Pie del reporte -->
    <template id="report_purchase_without_iva_header">
        <!-- Cabecera -->
        <div class="header" style="font-family: Arial;  font-size:12px;">
            <div class="container">
                <div class="row">
                    <div class="col-9"/>
                    <div class="col-3">
                        <table style="width: 100%;" class="table table-borderless table-sm">
                            <tr>
                                <td class="p-0 align-middle" colspan="2">
                                    <b>Tasa: <span t-out="o.tax_today" t-options='{"widget": "float", "decimal_precision": "o.company_id.currency_id"}'/></b>
                                </td>
                            </tr>
                            <tr>
                                <td class="p-0 align-middle" colspan="2">
                                    <b>
                                        <t t-if="o.move_type == 'out_invoice' and o.ref">
                                            <b>
                                                NOTA DE DÉBITO N° <span t-field="o.invoice_number"/>
                                            </b>
                                        </t>
                                        <t t-elif="o.move_type == 'out_invoice' and o.journal_id.exclude_fiscal_documents">
                                            <b>
                                                ORDEN DE ENTREGA N° <span t-field="o.invoice_number"/>
                                            </b>
                                        </t>
                                        <t t-elif="o.move_type == 'out_invoice'">
                                            <b>
                                                FACTURA N° <span t-field="o.invoice_number"/>
                                            </b>
                                        </t>
                                        <t t-elif="o.move_type == 'out_refund'">
                                            <b>
                                                NOTA DE CRÉDITO N° <span t-field="o.invoice_number"/>
                                            </b>
                                        </t>
                                        <t t-else="">
                                            <span t-field="o.invoice_number"/>
                                        </t>

                                    </b>
                                </td>
                            </tr>
                            <t t-if="o.move_type == 'out_invoice'">
                                <tr t-if="o.invoice_date">
                                    <td class="p-0 align-middle" colspan="2">
                                        Emisión: <b> <span t-esc="o.invoice_date.strftime('%d/%m/%Y')"/></b>
                                    </td>
                                </tr>
                                <tr t-if="o.invoice_payment_term_id or o.invoice_date_due">
                                    <td class="p-0 align-middle" colspan="2">
                                        Vencimiento: 
                                        <t t-if="o.invoice_payment_term_id">
                                            <b><span t-field="o.invoice_payment_term_id.name"/></b>
                                        </t>
                                        <t t-else="">
                                            <b><span t-if="o.invoice_date_due" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')"/></b><br/>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-9">
                        <table style="width: 100%;" class="table table-borderless table-sm">
                            <colgroup>
                                <col span="1" style="width: 30%;"/>
                                <col span="1" style="width: 70%;"/>
                            </colgroup>
                            <tbody>
                                <tr t-if="o.move_type == 'out_invoice'">
                                    <td colspan="2" class="p-0 align-middle">Vendedor: <span t-esc="o.invoice_user_id.name"/></td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="p-0 align-middle">Nombre / Razón Social: <span t-field="o.partner_id.name"/></td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="p-0 align-middle">C.I. / R.I.F: 
                                        <t t-if="not o.partner_id.is_company">
                                            <span t-if="o.partner_id.nationality" t-esc="o.partner_id.nationality.upper()"/>-<span t-if="o.partner_id.identification_id" t-field="o.partner_id.identification_id"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="o.partner_id.vat"/>
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-3">
                        <t t-if="o.move_type == 'out_invoice'">
                            <table style="width: 100%;" class="table table-borderless table-sm">
                                <tr>
                                    <td class="p-0 align-middle" colspan="2">
                                        Pedido : <span t-field="o.invoice_origin"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="p-0 align-middle" colspan="2">
                                        Cond. Pago : 
                                        <span t-if="o.invoice_payment_term_id.term_type == 'cash'">Contado</span>
                                        <span t-if="o.invoice_payment_term_id.term_type == 'credit'">Crédito</span>
                                    </td>
                                </tr>
                            </table>
                        </t>
                        <t t-else="">
                            <table style="width: 100%;" class="table table-borderless table-sm">
                                <tr>
                                    <td class="p-0 align-middle" colspan="2">
                                        Emisión : <span t-esc="o.invoice_date.strftime('%d/%m/%Y')"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="p-0 align-middle" colspan="2">
                                        Vendedor : <span t-field="o.invoice_user_id.name"/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </div>
                </div>
            </div>
            <div class="container">
                <table style="width: 100%;" class="table table-borderless table-sm">
                    <tr>
                        <td colspan="2" class="p-0 align-middle">
                            <span>Domicilio Fiscal:</span>
                            <span t-field="o.partner_id.street"/> 
                            <span t-field="o.partner_id.city"/> 
                            <span t-field="o.partner_id.state_id.name"/>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0"/>
        </div>

        <!-- Pie -->
        
    </template>

    <!-- Cuerpo del reporte -->
    <template id="report_purchase_without_iva">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="gchakao_custom.report_purchase_without_iva_header">
                    <div class="page" style="font-size: 11px; font-family: Roman;">
                        <div class="oe_structure"></div>
                        <table class="table table-sm table-borderless">
                            <thead style="border:1px solid black;">
                                <tr>
                                    <th class="text-center p-0"><strong>Código</strong></th>
                                    <th class="text-center p-0"><strong>Descripción</strong></th>
                                    <th class="text-center p-0"><strong>Cant.</strong></th>
                                    <th class="text-center p-0"><strong>(E)</strong></th>
                                    <th class="text-center p-0"><strong>Precio Unit.</strong></th>
                                    <th class="text-center p-0"><strong>%Dcto.</strong></th>
                                    <th class="text-center p-0"><strong>Precio Unit. Dcto.</strong></th>
                                    <th class="text-center p-0"><strong>Filler</strong></th>
                                    <th class="text-center p-0"><strong>Total</strong></th>
                                </tr>
                            </thead>
                            <t t-set="discount_usd" t-value="0"/>
                            <t t-set="discount_bs" t-value="0"/>
                            <t t-set="exento_usd" t-value="0"/>
                            <t t-set="exento_bs" t-value="0"/>
                            <tbody>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-set="count" t-value="1"/>
                                <tr><td colspan="9" class="mt-50"></td></tr>
                                <tr t-foreach="lines" t-as="line">
                                    <t t-set="discount_usd" t-value="discount_usd + line.discount_usd"/>
                                    <t t-set="discount_bs" t-value="discount_bs + line.discount_bs"/>
                                    <td class="p-0 align-middle">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td class="p-0 align-middle">
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td class="text-end p-0 align-middle">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td class="text-center p-0 align-middle">
                                        <t t-if="line.tax_ids.filtered(lambda l: l.appl_type == 'exento')">
                                            E
                                            <t t-set="exento_usd" t-value="exento_usd + line.price_unit_usd"/>
                                            <t t-set="exento_bs" t-value="exento_usd + line.price_unit"/>
                                        </t>
                                    </td>
                                    <td class="text-end p-0 align-middle">
                                        <span t-field="line.price_unit_usd" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                                    </td>
                                    <td class="text-end p-0 align-middle">
                                        <span t-field="line.discount"/>%
                                    </td>
                                    <td class="text-end p-0 align-middle">
                                        <span t-out="(line.price_unit_usd-line.discount_usd)" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                                    </td>
                                    <td class="text-end p-0 align-middle">
                                        <span t-field="line.fillert" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td class="text-end p-0 align-middle">
                                        <span t-field="line.price_subtotal_usd" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <div class="container" style="border-top:1px black solid; font-family: Roman; font-size:12px;">
                            <div class="row">
                                <div class="col-4 p-2">
                                    <table style="width: 100%; padding:0;" class="table table-sm table-borderless">
                                        <colgroup>
                                            <col span="1" style="width: 35%;"/>
                                            <col span="1" style="width: 30%;"/>
                                            <col span="1" style="width: 35%;"/>
                                        </colgroup>
                                        <tr>
                                            <td class="text-start p-0"><smal>Cnt. Vendida:</smal></td>
                                            <td class="text-start p-0" colspan="2">
                                                <t t-set="qty_sell_tot" t-value="sum(o.invoice_line_ids.mapped('quantity'))"/>
                                                <span t-esc="qty_sell_tot" t-options='{"widget": "float", "decimal_precision": "o.company_id.currency_id"}'/>
                                            </td>
                                        </tr>
                                        <tr t-if="o.narration">
                                            <td colspan="3" class="text-start p-0">
                                                <span>Observaciones:</span>
                                            </td>
                                        </tr>
                                        <tr t-if="o.narration">
                                            <td colspan="3" class="text-start p-0">
                                                <span><t t-esc="o.narration"/></span>
                                            </td>
                                        </tr>
                                        <t t-if="o.move_type in ('out_refund', 'out_receipt')">
                                            <t t-call="gchakao_custom.refund_receipt_details"/>
                                        </t>
                                    </table>
                                </div>
                                <div class="col-8 p-2">
                                    <table style="width: 100%; padding:0;" class="table table-sm table-borderless">
                                        <colgroup>
                                            <col span="1" style="width: 40%;"/>
                                            <col span="1" style="width: 60%;"/>
                                        </colgroup>
                                        <tr>
                                            <td class="text-end p-0">
                                                <span>Sub-total:</span>
                                            </td>
                                            <td class="text-end p-0">
                                                <span t-field="o.amount_untaxed_usd" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-end p-0">
                                                <span>Ajustes:</span>
                                            </td>
                                            <td class="text-end p-0">
                                                $ 0,00
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-end p-0">
                                                <span>Descuentos:</span>
                                            </td>
                                            <td class="text-end p-0">
                                                <span t-esc="discount_usd" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                                            </td>
                                        </tr>
                                        
                                        <tr>
                                            <td class="text-end p-0">
                                                <span>Monto Exento:</span>
                                            </td>
                                            <td class="text-end p-0">
                                                <span t-field="o.amount_untaxed_usd" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-end p-0">
                                                <span>Base Neta Imponible:</span>
                                            </td>
                                            <td class="text-end p-0">
                                                <span t-field="o.amount_untaxed_usd" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                                            </td>
                                        </tr>
                                        <!-- IMPUESTOS -->
<!--                                         <t t-set="tax_totals" t-value="o.tax_totals"/>
                                        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                            <t t-call="gchakao_custom.tax_groups_totals_me"/>
                                        </t> -->
                                        <tr>
                                            <td class="text-end p-0">
                                                <span>Impuestos:</span>
                                            </td>
                                            <td class="text-end p-0">
                                                $ 0,00
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-end p-0">
                                                <span>Total a Pagar:</span>
                                            </td>
                                            <td class="text-end p-0">
                                                <span t-field="o.amount_untaxed_usd" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="tax_groups_totals_me">
        <!--
            Generic template to display a list of tax groups with the related amounts.

            ARGUMENTS:
            - tax_totals: dict in the form generated by account.move's _get_tax_totals.
            - subtotal_to_show: The subtotal we need to render the groups from
        -->
        <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
            <t t-set="display_tax_base" t-value="tax_totals['display_tax_base']"/>
            <t t-set="tax" t-value="amount_by_group['tax_group_amount']"/>
            <tr>
                <t t-if="amount_by_group['tax_group_name'] != 'IVA 0%'">
                    <t t-if="o.currency_id.id == o.company_id.currency_id_dif.id">
                        <td class="text-end p-0">
                            <span t-out="amount_by_group['tax_group_name']"/>:
                        </td>
                        <td class="text-end p-0">
                            <span t-esc="tax" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                        </td>
                    </t>
                    <t t-else="">
                        <td class="text-end p-0">
                            <span t-out="amount_by_group['tax_group_name']"/>:
                        </td>
                        <td class="text-end p-0">
                            <span t-esc="tax/o.tax_today" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id_dif}'/>
                        </td>
                    </t>
                </t>
            </tr>
        </t>
    </template>
</odoo>
