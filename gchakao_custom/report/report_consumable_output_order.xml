<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_consumable_output_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <strong>Cliente:</strong>
                                    <br/>
                                </span>
                                <span t-field="o.partner_id.display_name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <strong>Dirección Entrega:</strong>
                                    <br/>
                                </span>
                                <span t-field="o.partner_id.contact_address"/>
                            </div>
                        </div>
                        <br/>
                        <h6>ORDEN DE SALIDA (CONSUMIBLES)</h6>
                        <h1 t-field="o.name" class="mt0 float-left"/>
                        <div class="row mt48 mb32">
                            <div t-if="o.origin" class="col-auto" name="div_origin">
                                <strong>Orden:</strong>
                                <p t-field="o.origin"/>
                            </div>
                            <div class="col-auto" name="div_state">
                                <strong>Estatus:</strong>
                                <p t-field="o.state"/>
                            </div>
                            <div class="col-auto" name="div_sched_date">
                                <strong>Fecha programada:</strong>
                                <p t-field="o.scheduled_date"/>
                            </div>
                            <div class="col-auto" name="div_date_done">
                                <strong>Fecha efectiva:</strong>
                                <p t-field="o.date_done"/>
                            </div>
                        </div>
                        <table class="table table-sm" t-if="o.move_line_ids and o.move_ids_without_package">
                            <t t-set="has_barcode" t-value="any([move_ids_without_package.product_id and move_ids_without_package.product_id.sudo().barcode or move_ids_without_package.package_id for move_ids_without_package in o.move_line_ids])"/>
                            <t t-set="has_serial_number" t-value="o.move_line_ids.filtered(lambda ml: ml.lot_id or ml.lot_name)" groups="stock.group_production_lot"/>
                            <thead>
                                <tr>
                                    <th name="th_nro">
                                        <strong>Nro</strong>
                                    </th>
                                    <th name="th_product">
                                        <strong>Producto</strong>
                                    </th>
                                    <th>
                                        <strong>Cuenta Analítica</strong>
                                    </th>
                                    <th>
                                        <strong>Cantidad</strong>
                                    </th>
                                    <th>
                                        <strong>Costo U.</strong>
                                    </th>
                                    <th>
                                        <strong>Costo T.</strong>
                                    </th>
                                    <th name="th_from" t-if="o.picking_type_id.code != 'incoming'" align="left" groups="stock.group_stock_multi_locations">
                                        <strong>Desde</strong>
                                    </th>
                                    <th name="th_to" t-if="o.picking_type_id.code != 'outgoing'" groups="stock.group_stock_multi_locations">
                                        <strong>Hacia</strong>
                                    </th>
                                </tr>
                            </thead>
                            <t t-set="total_cantidad" t-value="0"/>
                            <t t-set="total_lineas" t-value="0"/>
                            <tbody>
                                <t t-set="nro" t-value="1"/>
                                <t t-foreach="o.move_ids_without_package.sorted(key=lambda m: m.product_id.id)" t-as="move">
                                    <!-- In case you come accross duplicated lines, ask NIM or LAP -->
                                    <t t-foreach="move.move_line_ids.sorted(key=lambda ml: ml.location_id.id)" t-as="ml">
                                        <tr>
                                            <td>
                                                <span t-esc="nro"/>
                                            </td>
                                            <td>
                                                <span t-field="ml.product_id.display_name"/><br/>
                                                <span t-field="ml.product_id.description_picking"/>
                                            </td>
                                            <td>
                                                <t t-if="ml.analytic_distribution" t-foreach="ml.analytic_distribution" t-as="distribution">
                                                    <t t-esc="ml.env['account.analytic.account'].browse(int(distribution))[0].name"/>           
                                                </t>
                                            </td>
                                            <td>
                                                <span t-if="o.state != 'done'" t-field="ml.product_uom_qty"/>
                                                <span t-if="o.state == 'done'" t-field="ml.quantity"/>
                                                <span t-field="ml.product_uom_id" groups="uom.group_uom"/>
                                                <t t-set="total_cantidad" t-value="total_cantidad + (ml.product_uom_qty if o.state != 'done' else ml.quantity)"/>
                                            </td>
                                            <td>
                                                $<span t-field="ml.product_id.standard_price_usd"/><br/>
                                            </td>
                                            <td>
                                                $<span t-if="o.state != 'done'" t-esc="ml.product_uom_qty * ml.product_id.standard_price_usd" t-options='{"widget": "float", "precision":2}'/><span t-if="o.state == 'done'" t-esc="ml.quantity * ml.product_id.standard_price_usd" t-options='{"widget": "float", "precision":2}'/>
                                                <t t-set="total_lineas" t-value="total_lineas + (ml.product_uom_qty * ml.product_id.standard_price_usd if o.state != 'done' else ml.quantity * ml.product_id.standard_price_usd)"/>
                                            </td>
                                            <td t-if="o.picking_type_id.code != 'incoming'" groups="stock.group_stock_multi_locations">
                                                <span t-esc="ml.location_id.display_name"/>
                                                    <t t-if="ml.package_id">
                                                        <span t-field="ml.package_id"/>
                                                    </t>
                                            </td>
                                            <td t-if="o.picking_type_id.code != 'outgoing'" groups="stock.group_stock_multi_locations">
                                                <div>
                                                    <span t-field="ml.location_dest_id"/>
                                                    <t t-if="ml.result_package_id">
                                                        <span t-field="ml.result_package_id"/>
                                                    </t>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-set="nro" t-value="nro + 1"/>
                                </t>
                            </tbody>
                        </table>
                        <table style="width: 50%; margin: auto; border: 1px solid black;">
                            <tfoot>
                                <tr>
                                    <td style="border: 1px solid black; padding: 5px 0 5px 10px; text-transform: uppercase; font-size: 14px;">TOTAL DE COSTO:</td>
                                    <td style="border: 1px solid black; padding: 5px 0 5px 10px; font-size: 14px;">$<span t-if="total_lineas" t-esc="total_lineas" t-options='{"widget": "float", "precision":2}'/></td>
                                </tr>
                            </tfoot>
                        </table>
                        <table class="table table-sm" t-if="o.package_level_ids and o.picking_type_entire_packs and o.state in ['assigned', 'done']">
                            <thead>
                                <tr>
                                    <th name="th_package">Paquete</th>
                                    <th name="th_pko_from" t-if="o.picking_type_id.code != 'incoming'" groups="stock.group_stock_multi_locations">Desde</th>
                                    <th name="th_pki_from" t-if="o.picking_type_id.code != 'outgoing'" groups="stock.group_stock_multi_locations">Hasta</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.package_level_ids.sorted(key=lambda p: p.package_id.name)" t-as="package">
                                    <t t-set="package" t-value="package.with_context(picking_id=o.id)"/>
                                    <td name="td_pk_barcode">
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', package.package_id.name, 600, 100)" style="width:300px;height:50px; margin-left: -50px;" alt="Barcode"/><br/>
                                    </td>
                                    <td t-if="o.picking_type_id.code != 'incoming'" groups="stock.group_stock_multi_locations">
                                        <span t-field="package.location_id"/>
                                    </td>
                                    <td t-if="o.picking_type_id.code != 'outgoing'" groups="stock.group_stock_multi_locations">
                                        <span t-field="package.location_dest_id"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <t t-set="no_reserved_product" t-value="o.move_ids_without_package.filtered(lambda x: x.product_uom_qty != x.quantity and x.move_line_ids and x.state!='done')"/>
                        <p t-if="o.state in ['draft', 'waiting', 'confirmed'] or no_reserved_product"><i class="fa fa-exclamation-triangle"/>
                            No se pudieron reservar todos los productos. Haga clic en el botón "Consultar disponibilidad" para intentar reservar productos.
                        </p>
                        <p t-field="o.note"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>