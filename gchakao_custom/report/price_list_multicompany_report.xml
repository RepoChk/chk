<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">

        <!-- Add you code here -->
        <record id="action_prices_list_multicompany_report_template" model="ir.actions.report">
            <field name="name">Lista de Precios Multi-Compa√±ia</field>
            <field name="model">price.list.multicompany</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">gchakao_custom.price_list_multicompany_report</field>
            <field name="report_file">gchakao_custom.price_list_multicompany_report</field>
            <field name="binding_type">report</field>
        </record>

        <template id="price_list_multicompany_report">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <style>
                            .border-black {
                                border-top: 1px solid black;
                            }
                        </style>
                        <div class="oe_structure"/>
                        <div class="header">
                            <div class="container">
                                <div class="row">
                                    <div class="col-3">
                                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 150px; max-width: 200px; margin-top:22px; margin-bottom: 22px;" alt="Logo"/>
                                    </div>
                                    <div class="col-6 text-center">
                                        <br/><br/>
                                        <span t-field="company.name"/><br/>
                                        <span t-field="company.street"/><br/>
                                    </div>
                                    <div class="col-3 text-end">
                                        <br/><br/>
                                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <h4 class="text-center">Lista de Precios</h4>
                        <t t-foreach="category_names" t-as="category">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th colspan="100">
                                            <h5>
                                                <span t-esc="category"/>
                                            </h5>
                                        </th>
                                    </tr>
                                    <tr style="font-size:12px">
                                        <th class="text-center align-middle" style="border-top:1px solid #dadada; border-bottom:1px solid #dadada" width="20%">
                                            <strong>Producto</strong>
                                        </th>
                                        <t t-foreach="companies" t-as="comp" t-if="is_qty_available">
                                            <th class="text-center bb-0" style="border:1px solid #dadada">
                                                <span t-esc="comp.name[:4]"/>
                                            </th>
                                            <!-- <th class="text-center align-middle" style="border:1px solid #dadada" t-if="is_qty_available">
                                                <strong>Cant. Dispo.</strong>
                                            </th>
                                            <th class="text-center align-middle" style="border:1px solid #dadada" t-if="is_qty_total">
                                                <strong>Cant. Total</strong>
                                            </th> -->
                                        </t>
                                        <t t-if="len(companies) > 1 and is_qty_available">
                                            <th class="text-center bb-0" style="border:1px solid #dadada">
                                                Total
                                            </th>
                                        </t>
                                        <th class="text-center align-middle" style="border:1px solid #dadada" width="20%"><strong>Modelo</strong></th>
                                        <th class="text-center align-middle" style="border:1px solid #dadada"><strong>Lonas</strong></th>
                                        <th class="text-center align-middle" style="border:1px solid #dadada"><strong>Load/speed</strong></th>
                                        <th class="text-center align-middle" style="border:1px solid #dadada"><strong>Marca</strong></th>
                                        <th class="text-center align-middle" style="border:1px solid #dadada"><strong>Tipo</strong></th>
                                        <t t-foreach="pricelist_ids" t-as="pricelist">
                                            <th class="text-center bb-0" style="border:1px solid #dadada">
                                                <strong><span t-esc="pricelist.name"/></strong>
                                            </th>
                                        </t>
                                        <th class="text-center align-middle" style="border-top:1px solid #dadada; border-bottom:1px solid #dadada" width="4%">
                                            <b>Alic.</b>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody" style="font-size: 12px;">
                                    <t t-set="previous_brand" t-value="None"/>
                                    <t t-set="previous_company" t-value="None"/>
                                    <t t-foreach="data" t-as="d">
                                        <!-- <t t-if="d['company_id'] == previous_company"> -->
                                            <t t-if="d['category'] == category">
                                                <!-- <t t-if="d['qty_available'] &gt;=1"> -->
                                                    <tr t-att-class="d['brand_id'] != previous_brand and 'pt-4 border-top border-black' or ''">
                                                        <t t-set="previous_brand" t-value="d['brand_id']"/>
                                                        <!-- <t t-set="previous_company" t-value="d['company_id']"/> -->
                                                        <td class="text-left">
                                                            <span t-esc="d['measure']"/>
                                                        </td>
                                                        <t t-set="total_products_by_companies" t-value="0"/>
                                                        <t t-foreach="companies" t-as="comp">
                                                            <t t-foreach="d['qty_by_company'].values()" t-as="company">
                                                                <t t-if="comp.id == company['company_id']">
                                                                    <td class="text-right" t-if="is_qty_available">
                                                                        <span t-esc="int(company['qty_available'])"/>
                                                                        <t t-set="total_products_by_companies" t-value="total_products_by_companies + int(company['qty_available'])"/>
                                                                    </td>
                                                                </t>
                                                            </t>
                                                        </t>
                                                        <t t-if="len(companies) > 1 and is_qty_available">
                                                            <td class="text-right">
                                                                <span t-esc="int(total_products_by_companies)"/>
                                                            </td>
                                                        </t>
                                                        <td class="text-center"><span t-esc="d['model']"/></td>
                                                        <td class="text-center"><span t-esc="d['tarps']"/></td>
                                                        <td class="text-center"><span t-esc="d['load_speed']"/></td>
                                                        <td class="text-center">
                                                            <span t-esc="d['brand_id']"/>
                                                        </td>
                                                        <td class="text-right"/>
                                                        <t t-foreach="d['pricelist_ids']" t-as="pricelist">
                                                            <td class="text-right">
                                                                <span t-esc="pricelist['price']" t-options="{'widget': 'float', 'precision': 2}"/>
                                                            </td>
                                                        </t>
                                                        <td class="text-center">
                                                            <span t-esc="d['aliquot']"/>
                                                        </td>
                                                        <!-- <td class="text-center">
                                                            <span t-esc="d['company_id']"/>
                                                        </td> -->
                                                    </tr>
                                                <!-- </t> -->
                                            </t>
                                        <!-- </t> -->
                                        <!-- <t t-else="">                                        
                                        </t> -->
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <div class="footer">
                            <div class="container">
                                <div class="row">
                                    <div class="text-center">
                                        P√°gina <span class="page" t-esc="0"/> de <span class="topage" t-esc="0"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>       
    </data>
</odoo>