<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_wh_islr_inherit" inherit_id="l10n_ve_full.template_wh_islr">
        <xpath expr="//div[hasclass('page')][1]" position="replace">
            <t t-if="d.type == 'in_invoice'">
                <table border="1" style="width:100%;margin-top:10px;">
                    <tr>
                        <td style="width:50%;text-align:center;padding:0px;margin:0px;">
                            <img t-attf-src="data:image/*;base64,{{d.env.user.signature_seal}}" style="border :0px;width:220px; height:120px;" width="220px" height="120px" />
                            <hr/>
                            <b><span t-if="d.env.user.partner_id.name" t-esc="d.env.user.partner_id.name"/></b>
                            <br/>
                            <b>Firma Sello</b>
                        </td>
                        <td style="width:50%;text-align:center;padding:0px;margin:0px;">
                            <br/>
                            <br/>
                            <br/>
                            <hr/>
                            <b><span t-esc="d.partner_id.name"/></b>

                            <br/>
                            <b>Firma Sello</b>
                        </td>
                    </tr>
                </table>
            </t>
        </xpath>
    </template>
</odoo>