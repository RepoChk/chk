<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <record id="approval_request_view_form_material_extend" model="ir.ui.view">
            <field name="name">approval.request.view.form.material.extend</field>
            <field name="model">approval.request</field>
            <field name="inherit_id" ref="approvals.approval_request_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='request_details']" position="inside">
                    <field name="is_cxp" invisible="1"/>
                    <field name="department_manager_id"/>
                    <field name="has_requisition_request" invisible="1"/>
                    <field name="has_analytic_request" invisible="1"/>
                    <field name="mp_requisition_id" readonly="1" invisible="has_requisition_request == 'no'" required="has_requisition_request == 'Required'"/>
                    <field name="mp_requisition_id" readonly="1" invisible="has_analytic_request == 'no'" required="has_analytic_request == 'Required'"/>
                    <field name="cxp_id" readonly="1" invisible="not cxp_id"/>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>